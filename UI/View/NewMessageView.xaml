<UserControl x:Class="Coursework1.UI.View.NewMessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coursework1.UI.View"
             mc:Ignorable="d"
             Foreground="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20 20 20 20" x:Name="grid">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Content="{Binding SimpleButtonText}" Command="{Binding SimpleButtonCommand}" 
                MinWidth="60" MinHeight="40" MaxWidth="600" MaxHeight="400" Background="Orange"/>
            <Button Grid.Column="2" Grid.Row="0" Content="{Binding AdvancedButtonText}" Command="{Binding AdvancedButtonCommand}" 
                MinWidth="60" MinHeight="40" MaxWidth="600" MaxHeight="400" Background="DarkMagenta"/>
        </Grid>
        <ContentControl Content="{Binding ContentControlBinding}"/>
    </Grid>
</UserControl>
